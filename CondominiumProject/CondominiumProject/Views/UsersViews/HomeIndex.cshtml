                        <li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Logout","Login")">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                                    <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                                </svg> Log-Out
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container text-center" />
    <div class="row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.Users[0].ProjectName</h5>
                    <div class="container px-4 text-center">
                        <div class="row gx-5">
                            <div class="col">
                                <div class="p-3">Habitation: #@ViewBag.Users[0].IDHabitation</div>
                            </div>
                            <div class="col">
                                <div class="p-3">Email: @ViewBag.Users[0].Email</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Cars</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Plate</th>
                                <th scope="col">Marc</th>
                                <th scope="col">Model</th>
                                <th scope="col">Color</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        @foreach (var items in ViewBag.Vehicles)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@items.Plate</th>
                                    <td>@items.Marc</td>
                                    <td>@items.Model</td>
                                    <td>@items.Color</td>
                                    <td><button type="button" class="btn btn-danger">Delete Car</button></td>
                                </tr>
                            </tbody>
                        }

                    </table>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">Add Car</button>
                </div>
            </div>
        </div>

        <div class="col-sm-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Visits</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Hour</th>
                                <th scope="col">Name</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.VisitDetails)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@item.VisitDate.ToString("dd-MM-yyyy")</th>
                                    <td>@item.VisitTime</td>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>
                                        <button style="font-size:14px" type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal">Visit Information</button>
                                    </td>

                                </tr>
                            </tbody>
                        }
                    </table>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal1">Add Visit</button>
                    <hr>
                    <h5 class="card-title">Delivery</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Service Name</th>
                                <th scope="col">Category</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        @foreach (var item in ViewBag.FastVisitsses)
                        {
                            <tbody>
                                <tr>
                                    <th scope="row">@item.FastVisitDate.ToString("dd-MM-yyyy")</th>
                                    <td>@item.ServiceName</td>
                                    <td>@item.Category</td>
                                    <td><button type="button" class="btn btn-danger">Delete Delivery</button></td>
                                </tr>
                            </tbody>
                        }
                       
                    </table>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal2">Add Fast Visit</button>
                </div>
            </div>


            <!-- Modal Add Vehicle -->
            <div class="modal fade" id="editModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="CreateVehicle" asp-controller="VehiclesC">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="editModalLabel">Add Vehicle</h1>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col">
                                        <input name="Marc" type="text" class="form-control" placeholder="Marc" aria-label="Marc" required>
                                    </div>
                                    <div class="col">
                                        <input name="Model" type="text" class="form-control" placeholder="Model" aria-label="Model" required>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col">
                                        <input name="Color" type="text" class="form-control" placeholder="Color" aria-label="Color" required>
                                    </div>
                                    <div class="col">
                                        <input name="Plate" type="text" class="form-control" placeholder="Plate" aria-label="Plate" required>
                                    </div>
                                    <input name="IdUser" type="hidden" class="form-control" value="@ViewBag.Users[0].IdUser">
                                    <input name="email" type="hidden" class="form-control" value="@ViewBag.Users[0].Email">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success">Add Vehicle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Add Visit-->
        <div class="modal fade" id="exampleModal1" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModal1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModal1">Create Visit</h1>
                    </div>
                    <div class="modal-body">
                        <form asp-action="CreateVisit" asp-controller="VisitsC">
                            <label for="inputVistData1" class="form-label">General Visist Data</label>
                            <div class="row" id="inputVistData1">
                                <div class="col">
                                    <input name="DNI" type="text" class="form-control" placeholder="Visit DNI" aria-label="DNI" required>
                                </div>
                                <div class="col">
                                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" aria-label="First Name" required>
                                </div>
                                <div class="col">
                                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" aria-label="Last Name" required>
                                </div>
                                <div class="col">
                                    <input name="Kinship" type="text" class="form-control" placeholder="Kinship" aria-label="Kinship" required>
                                </div>
                            </div>
                            <hr>
                            <label for="inputVistVehicle1" class="form-label">Vehicle Visit Data</label>
                            <div class="row" id="inputVistVehicle1">
                                <div class="col">
                                    <input name="Marc" type="text" class="form-control" placeholder="Marc" aria-label="Marc" required>
                                </div>
                                <div class="col">
                                    <input name="Model" type="text" class="form-control" placeholder="Model" aria-label="Model" required>
                                </div>
                                <div class="col">
                                    <input name="Color" type="text" class="form-control" placeholder="Color" aria-label="Color" required>
                                </div>
                                <div class="col">
                                    <input name="Plate" type="text" class="form-control" placeholder="Plate" aria-label="Plate" required>
                                </div>
                            </div>
                            <hr>
                            <label for="inputVistVehicle1" class="form-label">Calendar Visit Data</label>
                            <div class="row">
                                <div class="col">
                                    <input name="Date" type="date" class="form-control" placeholder="Date" aria-label="Date" required>
                                </div>
                                <div class="col">
                                    <input name="Hour" type="time" class="form-control" placeholder="Hour" aria-label="Hour" required>
                                </div>
                                <input name="email" type="hidden" class="form-control" value="@ViewBag.Users[0].Email">
                                <input name="IDHabitation" type="hidden" class="form-control" value="@ViewBag.Users[0].IDHabitation">
                                <input name="IdProject" type="hidden" class="form-control" value="@ViewBag.Users[0].IdProject">
                            </div>
                            <hr>
                            <label for="inputVistVehicle1" class="form-label">Select Favorite Visits</label>
                            <div class="row">
                                <div class="col">
                                    <select class="form-select" aria-label="Default select example">
                                        <option selected>Favorite Visits</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Create Visit</button>
                                <button type="button" class="btn btn-success">Add to Favorite Vists</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Add FastVisit-->
        <div class="modal fade" id="exampleModal2" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModal2" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModal2">Create Fast Visit</h1>
                    </div>
                    <div class="modal-body">
                        <form asp-action="CreateFastVisit" asp-controller="FastVisitC">
                            <label for="inputVistData1" class="form-label">Fast Visit Data</label>
                            <div class="row" id="inputVistData1">
                                <div class="col">
                                    <input name="ServiceName" type="text" class="form-control" placeholder="UberEats, Didi, Rappi, PedidosYam Other" aria-label="ServiceName" required>
                                </div>
                                <div class="col">
                                    <select name="Category" class="form-select" aria-label="Default select example" required>
                                        <option selected>Category</option>
                                        <option value="Food">Food</option>
                                        <option value="Purchases">Purchases</option>
                                        <option value="Transport">Transport</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col">
                                    <label for="textdate" class="form-label">* The date for this option is today.</label>
                                </div>
                                <input name="email" type="hidden" class="form-control" value="@ViewBag.Users[0].Email">
                                <input name="IDHabitation" type="hidden" class="form-control" value="@ViewBag.Users[0].IDHabitation">
                                <input name="IDProject" type="hidden" class="form-control" value="@ViewBag.Users[0].IdProject">
                                <input name="FastVisitDate" type="hidden" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")">


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Create Fast Visit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal" id="exampleModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fs-5" id="exampleModalLabel">Visit Information</h5>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><h5 class="card-title">Karla Jimenez</h5></li>
                                <li class="list-group-item"><p class="card-text"><p class="tile_card">Visit DNI<br>112323342</p></li>
                                <li class="list-group-item">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Marc</th>
                                                <th scope="col">Plate</th>
                                                <th scope="col">Model</th>
                                                <th scope="col">Color</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">Toyota</th>
                                                <td>883232</td>
                                                <td>Prado</td>
                                                <td>Black</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </li>
                                <li class="list-group-item">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">Date</th>
                                                <th scope="col">Hour</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>12-23-25</td>
                                                <td>12:30</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="space-container">
    </div>

    <div class="container1 bg-light">
        <footer class="py-0 my-2">
            <ul class="nav justify-content-center border-bottom ">
                <li class="nav-item">
                    <a href="@Url.Action("RootIndex","RootViews", new {email = ViewBag.email})" class="nav-link px-2">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z" />
